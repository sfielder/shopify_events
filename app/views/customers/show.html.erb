

	<div class="container-fluid">
            <div id="pad-wrapper" class="user-profile">
                <!-- header -->
                <div class="row-fluid header">
                    <div class="span8">
                        <img src="/img/contact-img2.png" class="avatar img-circle">
                        <h3 class="name"><%= @customer.first_name %> <%= @customer.last_name %></h3>
                        <span class="area"><%= @customer.email %></span>
                    </div>
                    
                     <%= link_to t('.edit', :default => t("helpers.links.edit")),
		              edit_attendee_path(@customer), :class => 'btn-flat default pull-right' %>
                </div>

                <div class="row-fluid profile">
                    <!-- bio, new note & orders column -->
                    <div class="span9 bio">
                        <div class="profile-box">
                           
                            <h6>Recent orders</h6>
                            <br>
                            <!-- recent orders table -->
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="span2">
                                            Order #
                                        </th>
                                        <th class="span2">
                                            Event
                                        </th>
                                        <th class="span3">
                                            <span class="line"></span>
                                            Quantity
                                        </th>
                                        <th class="span3">
                                            <span class="line"></span>
                                            Total
                                        </th>
                                        <th class="span3">
                                            <span class="line"></span>
                                           Status
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- row -->
                                    <% @customer.registrations.each do |r| %>
                                    <tr class="first">
                                        <td>
                                            <%= r.order_number %>
                                        </td>
                                        <td>
                                            <%= link_to r.event.title, event_path(r.event) %>
                                        </td>
                                        <td>
                                           <%= r.quantity %>
                                        </td>
                                        <td>
                                            <%= number_to_currency(r.total) %>
                                        </td>
                                        <td>
                                           <%= r.status %>
                                        </td>
                                    </tr>
                                    <% end %>
                                    
                                </tbody>
                            </table>

                            <!-- new comment form 
                            <div class="span12 section comment">
                                <h6>Add a quick note</h6>
                                <p>Add a note about this user to keep a history of your interactions.</p>
                                <textarea></textarea>
                                <a href="#">Attach files</a>
                                <div class="span12 submit-box pull-right">
                                    <input type="submit" class="btn-glow primary" value="Add Note">
                                    <span>OR</span>
                                    <input type="reset" value="Cancel" class="reset">
                                </div>
                            </div>-->
                        </div>
                    </div>

                    <!-- side address column -->
                    <div class="span3 address pull-right">
                        <h6>Address</h6>
                        <iframe width="300" height="133" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com.mx/?ie=UTF8&amp;t=m&amp;ll=19.715081,-155.071421&amp;spn=0.010746,0.025749&amp;z=14&amp;output=embed"></iframe>
                        <ul>
                            <li><%= @customer.address1 %></li>
                            <li><%= @customer.address2 %></li>
                            <li><%= @customer.zip %>, <%= @customer.province %>. <%= @customer.country %>,</li>
                            <li class="ico-li">
                                <i class="ico-phone"></i>
                                <%= @customer.phone %>
                            </li>
                             <li class="ico-li">
                                <i class="ico-mail"></i>
                                <a href="#"><%= @customer.email %></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>


<% content_for :styles do %>

	<%= stylesheet_link_tag "/css/user-profile.css"%>
<% end %>


