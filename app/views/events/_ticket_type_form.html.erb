<!-- Modal -->
<div id="newModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">New <%= @event.title.upcase %> Ticket Type</h3>
  </div>
  <div class="modal-body">
  	
    <%= simple_form_for(@ticket_type) do |f| %>
	  <%= f.error_notification %>
	<div class="row-fluid">
	  
	  <div class="form-inputs span3">
	    <%= f.input :name, :required => true %>
	    <%= f.input :capacity, :required => true %>
	    <%= f.input :price, :required => true %>
	    <%= f.input :description %>
	    <%= f.input :event_id, :as => :hidden, :input_html => { :value => @event.id } %>
	  </div>
	  
		<div class="span6 well pull-right alert-success">
		<strong>Capacity</strong> = How many total tickets are available at this price?
		</div>
	</div>  
	  
	  <div class="modal-footer">
	  	<button class="btn btn-flat gray" data-dismiss="modal" aria-hidden="true">Close</button>
	    <%= f.button :submit, :class => "btn btn-flat default" %>
	  </div>
	<% end %>
	
	
	
  </div>
 
</div>







