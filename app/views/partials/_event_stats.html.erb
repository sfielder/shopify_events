<!-- upper main stats -->
<div id="main-stats">
	<div class="row-fluid stats-row">

		<div class="span4 stat">
			<div class="data">
				<span class="number"><%= @product.orders.count %></span>
				Registrations
			</div>
			<span class="date">Total</span>
		</div>
		<div class="span4 stat">
			<div class="data">
				<span class="number"><%= number_to_currency(@product.orders.sum(:total)) %></span>
				event revenue
			</div>
			<span class="date">This month</span>
		</div>
		<div class="span4 stat last">
			<div class="data">
				<span class="number"><%= @product.attendees.count %></span>
				confirmed attendees
			</div>
			<span class="date">last 30 days</span>
		</div>
	</div>
</div>
<!-- end upper main stats -->