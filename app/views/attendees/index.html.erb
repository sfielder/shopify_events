	<div class="row-fluid header">
                    <h3><%= @event.title.upcase %> Attendees </h3>
            <div class="pull-right">
					<%= link_to event_path(@event), :class => 'btn-flat icon pull-right' do %>
						<i class="icon-wrench"></i>
						BACK TO EVENT
					<% end %> 
		              
		
		 
	</div>
                </div>
                
                <!-- Users table -->
                <div class="row-fluid table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="span4 sortable">
                                    Name
                                </th>
                                <th class="span4 sortable">
                                    Event
                                </th>
                                <th class="span3 sortable">
                                    <span class="line"></span>Email
                                </th>
                                <th class="span3 sortable ">
                                    <span class="line"></span>Phone
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                        <!-- row -->
                        <% @attendees.each do |attendee| %>
                        <tr class="first">
                            <td><%= link_to attendee_path(attendee), :class => "name" do %>
                            		<%= attendee.first_name %> <%= attendee.last_name %>
                            	<% end %>
                            </td>
                            <td><%= attendee.event.title %> </td>
						    <td><%= attendee.email %></td>
						    <td><%= number_to_phone(attendee.phone) %></td>
						    
						    
                        </tr>
                        <% end %>
                        
                        </tbody>
                    </table>
                </div>
                
               <%= paginate @attendees %>
                <!-- end users table -->
            </div>
       

